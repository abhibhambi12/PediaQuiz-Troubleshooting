{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    // --- IMPORTANT PATH FIXES ---
    "moduleResolution": "Node", // Changed from "bundler" to "Node" for better module/type resolution
    "allowSyntheticDefaultImports": true, // CRITICAL FIX for default imports like React
    "baseUrl": ".", // Base URL for module resolution, relative to tsconfig.json
    "paths": {
      // @/ alias is for internal frontend src paths, NOT for @pediaquiz/types now
      "@/*": ["./src/*"] 
    },
    "rootDir": "src", // Specifies the root directory of input files
    "types": [], // Important: let TS discover types automatically in node_modules/@types/ and from package 'types' fields
    // --- End IMPORTANT PATH FIXES ---

    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  // Ensure 'src' and 'vite-env.d.ts' are included
  "include": ["src", "vite-env.d.ts"], 
  "references": [{ "path": "./tsconfig.node.json" }]
}